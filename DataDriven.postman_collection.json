	"item": [
		{
			"name": "DataDriven",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let expectedStatus = pm.iterationData.get(\"expectedStatus\")\r",
							"let userEmail = pm.iterationData.get(\"email\")\r",
							"let userName = pm.iterationData.get(\"name\")\r",
							"let userPassword = pm.iterationData.get(\"password\")\r",
							"let userRole = pm.iterationData.get(\"role\")\r",
							"let userAvatar = pm.iterationData.get(\"avatar\")\r",
							"\r",
							"\r",
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"pm.test(\"User body is correct\", function () {\r",
							"    let jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.email).to.eql(userEmail);\r",
							"    pm.expect(jsonData.name).to.eql(userName);\r",
							"    pm.expect(jsonData.password).to.eql(userPassword);\r",
							"    pm.expect(jsonData.role).to.eql(userRole);\r",
							"    pm.expect(jsonData.avatar).to.eql(userAvatar);\r",
							"});\r",
							"\r",
							"let schema={\r",
							"    \"type\": \"object\",\r",
							"    \"required\": [\"id\", \"email\", \"name\", \"password\", \"role\", \"avatar\"],\r",
							"    \"properties\": {\r",
							"        \"id\": { \"type\": \"number\" },\r",
							"        \"email\": { \"type\": \"string\" },\r",
							"        \"name\": { \"type\": \"string\" },\r",
							"        \"password\": { \"type\": \"string\" },\r",
							"        \"role\": { \"type\": \"string\" },\r",
							"        \"avatar\": { \"type\": \"string\" }\r",
							"    }\r",
							"\r",
							"}\r",
							"pm.test(\"response body adhere to required contract schema\", ()=>{\r",
							"    pm.response.to.have.jsonSchema(schema)\r",
							"})\r",
							"\r",
							"pm.environment.set(\"UserNumber\", pm.response.json().id)"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
